{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "src/core/*"
      ],
      "@adapter/*": [
        "src/adapter/*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "@karinjs",
    "default",
    "lib",
    "plugins",
    "node_modules",
    "logs",
  ],
  "include": [
    "src/**/*"
  ],
  "tsc-alias": {
    "resolveFullExtension": ".js",
    "resolveFullPaths": true
  }
}