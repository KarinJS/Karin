{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./lib/types",
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "outDir": "./lib",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@fs": [
        "./src/utils/fs/main"
      ],
      "events": [
        "node_modules/@types/node/events.d.ts"
      ],
      "node:events": [
        "node_modules/@types/node/events.d.ts"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "@karinjs",
    "default",
    "lib",
    "plugins",
    "node_modules",
    "logs"
  ],
  "include": [
    "./src/**/*",
    "./src/global.d.ts"
  ]
}