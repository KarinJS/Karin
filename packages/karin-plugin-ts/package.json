{
  "name": "karin-plugin-template-ts",
  "version": "1.0.0",
  "description": "karin plugin template",
  "homepage": "https://github.com/KarinJS/karin",
  "bugs": {
    "url": "https://github.com/KarinJS/karin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KarinJS/karin.git"
  },
  "author": "shijin",
  "type": "module",
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "/config/*.json",
    "resources",
    "!lib/app.js"
  ],
  "scripts": {
    "app": "node lib/app.js",
    "build": "tsup",
    "checkType": "tsc",
    "dev": "cross-env EBV_FILE=\"development.env\" node --import tsx src/app.ts",
    "prepublishOnly": "pnpm run checkType",
    "pub": "npm publish --access public"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.17.8",
    "cross-env": "^7.0.3",
    "eslint": "^9.7.0",
    "neostandard": "^0.11.9",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "karin": {
    "main": "src/index.ts",
    "apps": [
      "lib/apps"
    ],
    "ts-apps": [
      "src/apps"
    ],
    "static": [
      "resources"
    ],
    "files": [
      "config",
      "data",
      "resources"
    ]
  }
}
