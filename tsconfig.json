{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["src/*"],
      "@fs": ["src/core/utils/fs/main"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "types": ["@types/node"]
  },
  "exclude": ["@karinjs", "default", "lib", "plugins", "node_modules", "logs"],
  "include": ["src/**/*", "src/global.d.ts"],
  "tsc-alias": {
    "resolveFullExtension": ".js",
    "resolveFullPaths": true
  }
}
