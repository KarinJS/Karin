{
  "name": "node-karin",
  "version": "0.3.3",
  "private": false,
  "description": "基于 Kritor 进行开发的nodejs机器人框架",
  "homepage": "https://github.com/KarinJS/Karin",
  "bugs": {
    "url": "https://github.com/KarinJS/Karin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KarinJS/Karin.git"
  },
  "license": "GPL-3.0-only",
  "author": "Karin",
  "type": "module",
  "imports": {
    "#Karin": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "bin": {
    "init": "./lib/tools/init.js"
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "/config/defSet/*.yaml",
    "/config/view/*.yaml",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "workspaces": [
    "plugins/**"
  ],
  "scripts": {
    "app": "node .",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && npm run fix",
    "delete": "pm2 delete ./config/config/pm2.yaml",
    "fix": "eslint lib/**/*.js --fix",
    "fix:all": "eslint lib/**/*.js --fix && eslint src/**/*.ts --fix",
    "init": "node lib/tools/install.js",
    "init:dev": "node lib/tools/install.js",
    "init:pack": "node lib/tools/install.js",
    "dev": "tsx ./lib/index.js --dev",
    "log": "node lib/tools/pm2Log.js",
    "monit": "pm2 monit",
    "pub": "npm publish --access public",
    "restart": "pm2 restart ./config/config/pm2.yaml",
    "sort:pack": "npx sort-package-json",
    "start": "pm2 start ./config/config/pm2.yaml && pm2 monit",
    "stop": "pm2 delete ./config/config/pm2.yaml",
    "uninstall": "node lib/tools/uninstall.js",
    "ver": "node lib/tools/updateVersion.js"
  },
  "dependencies": {
    "@grpc/grpc-js": "1.10.10",
    "@grpc/proto-loader": "0.7.13",
    "art-template": "4.13.2",
    "axios": "1.7.2",
    "chalk": "5.3.0",
    "chokidar": "3.6.0",
    "express": "4.19.2",
    "kritor-proto": "^0.0.6",
    "level": "8.0.1",
    "lodash": "4.17.21",
    "log4js": "6.9.1",
    "moment": "2.30.1",
    "node-schedule": "2.1.1",
    "redis": "4.6.14",
    "ws": "8.16.0",
    "yaml": "2.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.14.8",
    "@types/node-schedule": "^2.1.7",
    "@types/ws": "8.5.10",
    "eslint": "9.5.0",
    "neostandard": "^0.9.0",
    "sort-package-json": "^2.10.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.15.7",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}